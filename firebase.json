{
  "functions": [
    {
      "source": "api-mcp",
      "codebase": "default",
      "ignore": [
        "node_modules",
        ".git",
        "firebase-debug.log",
        "firebase-debug.log.*"
      ],
      "predeploy": [
        "pnpm --filter api-mcp build"
      ]
    }
  ],
  "hosting": {
    "public": "front-end",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "/api/**",
        "function": "api"
      },
      {
        "source": "/admin/journeys",
        "function": "api"
      },
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  }
}
